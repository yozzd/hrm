{
    "name": "hrm",
    "version": "1.0.0",
    "description": "My classy Nuxt.js project",
    "author": "yozz",
    "private": true,
    "scripts": {
        "dev": "cross-env NODE_ENV=development nodemon server/index.js --watch server",
        "test": "cross-env NODE_ENV=test jest --forceExit --detectOpenHandles --runInBand",
        "build": "nuxt build",
        "start": "cross-env NODE_ENV=production node server/index.js",
        "generate": "nuxt generate"
    },
    "dependencies": {
        "@nuxtjs/apollo": "^4.0.0-rc2.3",
        "apollo-link-http": "^1.5.9",
        "apollo-upload-client": "^10.0.0",
        "cross-env": "^5.2.0",
        "express": "^4.16.3",
        "express-graphql": "^0.7.1",
        "express-jwt": "^5.3.1",
        "fs-extra": "^7.0.1",
        "graphql": "^14.1.0",
        "graphql-errors": "^2.1.0",
        "graphql-iso-date": "^3.6.1",
        "graphql-tag": "^2.10.0",
        "graphql-upload": "^8.0.4",
        "iview": "^3.2.2",
        "jimp": "^0.6.0",
        "js-cookie": "^2.2.0",
        "jsonwebtoken": "^8.4.0",
        "lodash": "^4.17.11",
        "moment": "^2.23.0",
        "mongoose": "^5.4.4",
        "mongoose-beautiful-unique-validation": "^7.1.1",
        "mongoose-timestamp": "^0.6.0",
        "nuxt": "^2.0.0",
        "passport": "^0.4.0",
        "passport-local": "^1.0.0",
        "slugify": "^1.3.4",
        "uuid": "^3.3.2",
        "vue-the-mask": "^0.11.1"
    },
    "devDependencies": {
        "jest": "^23.6.0",
        "nodemon": "^1.18.9",
        "supertest": "^3.3.0"
